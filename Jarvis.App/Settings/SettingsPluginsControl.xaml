<UserControl 
    x:Class="Jarvis.App.Settings.SettingsPluginsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Jarvis.App.Settings"
    xmlns:app="clr-namespace:Jarvis.App"
    x:Name="ThisControl"
    mc:Ignorable="d"
    d:DesignHeight="300" 
    d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="3"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <GridSplitter 
            Grid.Column="1" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" />
        
        <ListView 
            Name="ListViewName" 
            Grid.Row="0"
            Grid.Column="0"
            ItemsSource="{Binding ElementName=ThisControl, Path=Plugins}" 
            HorizontalContentAlignment="Stretch"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            SelectionChanged="OnSelectionPlugin"
        >
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type app:JarvisPluginDescription}">
                    <local:SettingsPluginItemControl PluginDescription="{Binding Path=PluginDescription }"  />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <local:SettingsPluginControl 
            Grid.Row="0" 
            Grid.Column="2" 
            PluginDescription="{Binding ElementName=ThisControl, Path=SelectedPlugin.PluginDescription}"
            PluginSettings="{Binding ElementName=ThisControl, Path=SelectedPlugin.PluginSettings}"
            />
    </Grid>
</UserControl>
