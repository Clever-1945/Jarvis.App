<UserControl 
    x:Class="Jarvis.App.Settings.SettingsMainControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Jarvis.App.Settings"
    x:Name="ThisUserControl"
    mc:Ignorable="d"
    d:DesignHeight="300" 
    d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <CheckBox Grid.Row="0" Margin="0 5 0 0" IsChecked="{Binding ElementName=ThisUserControl, Path=Settings.AutoStart}">Запускать приложение при старте системы</CheckBox>
        <CheckBox Grid.Row="1" Margin="0 5 0 0" IsChecked="{Binding ElementName=ThisUserControl, Path=Settings.ShowDialogIfAutoStart}">Показать главное окно при автостарте</CheckBox>
    </Grid>
</UserControl>
