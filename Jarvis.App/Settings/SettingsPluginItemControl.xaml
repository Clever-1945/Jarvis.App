<UserControl 
    x:Class="Jarvis.App.Settings.SettingsPluginItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Jarvis.App.Settings"
    x:Name="ThisControl"
    mc:Ignorable="d"
    d:DesignHeight="300" 
    d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Image Name="ImagePlugin" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"></Image>
        <TextBlock Name="TextBlockName" Grid.Column="1" Grid.Row="0" ></TextBlock>
        <TextBlock Padding="10 0 0 0" Name="TextBlockDescription" Grid.Column="1" Grid.Row="1" ></TextBlock>
    </Grid>
</UserControl>
